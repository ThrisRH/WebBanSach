
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<link rel="stylesheet" href="~/Content/assets/css/loginStyle.css" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />


<main aria-labelledby="title">
    <div class="login-area">
        <div class="login-form">
            <div class="form-header">
                <h2 style="font-weight:400">Đăng ký tài khoản</h2>
                <div class="social-log">
                    <div class="fb-log">
                        <div class="left-items">
                            <i class="fa-brands fa-facebook-f"></i>
                        </div>
                        <div class="right-items">
                            <p>Facebook</p>
                        </div>
                    </div>
                    <div class="gmail-log">
                        <div class="left-items">
                            <i class="fa-brands fa-google-plus-g"></i>
                        </div>
                        <div class="right-items">
                            <p>Google</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-body">
                <form name="form" id="login-form" method="get">
                    <input type="text" name="fullName" id="fulName-regis" placeholder="Họ và tên" maxlength="50" required/>
                    <input type="email" name="email" id="email-regis" placeholder="Email" maxlength="50"  required/>
                    <input type="tel" name="phoneNum" id="phoneNum-regis"  pattern="[0-9]{10}" placeholder="Số điện thoại" maxlength="10" required />
                    <input type="password" name="password" id="password-login" placeholder="Mật khẩu" maxlength="50"  required />
                    <button type="submit" name="submit" id="submit">Đăng ký</button>
                </form>
            </div>
        </div>
    </div>
</main>